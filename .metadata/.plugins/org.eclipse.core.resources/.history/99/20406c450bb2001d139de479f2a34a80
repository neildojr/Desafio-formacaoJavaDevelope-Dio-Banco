package bancoDio;

import java.util.ArrayList;
import java.util.List;

import bancoDio.contas.Cliente;
import bancoDio.contas.Conta;
import bancoDio.contas.ContaCorrente;
import bancoDio.contas.ContaPoupanca;

public class Main {
	public static void main(String[] args) {
		        // Cria uma lista de contas
		        List<Conta> contas = new ArrayList<>();

		        // Cria as contas e adiciona na lista
		        Cliente neildo = new Cliente();
		        neildo.setNome("Neildo Inacio do nascimento junior");
			        Conta contaCorrente1 = new ContaCorrente(neildo);
			        Conta contaPoupanca1 = new ContaPoupanca(neildo);
				        contas.add(contaCorrente1);
				        contas.add(contaPoupanca1);
				       contaCorrente1.depositar(1000);
				       contaPoupanca1.transferir(200, contaPoupanca1);

		        Cliente antonio = new Cliente();
		        antonio.setNome("Antonio do nascimento");
			        Conta contaCorrente2 = new ContaCorrente(antonio);
			        Conta contaPoupanca2 = new ContaPoupanca(antonio);
				        contas.add(contaCorrente2);
				        contas.add(contaPoupanca2);
		        
		        Cliente Sheila = new Cliente();
				Sheila.setNome("Sheila Thais");
					Conta contaCorrente3 = new ContaCorrente(Sheila);
						contas.add(contaCorrente3);
				
				Cliente Claudia = new Cliente();
				Claudia.setNome("Claudia Cunha");
					Conta contaCorrente4 = new ContaCorrente(Claudia);
					Conta contaPoupanca4 = new ContaPoupanca(Claudia);
				        contas.add(contaCorrente4);
				        contas.add(contaPoupanca4);
				
				Cliente Marcelo = new Cliente();
				Marcelo.setNome("Marcelo junior");
					Conta contaCorrente5 = new ContaCorrente(Marcelo);
					Conta contaPoupanca5 = new ContaPoupanca(Marcelo);
				        contas.add(contaCorrente5);
				        contas.add(contaPoupanca5);
				
				Cliente Michele = new Cliente();		
				Michele.setNome("Michele da Silva");
					Conta contaPoupanca6 = new ContaPoupanca(Michele);
						contas.add(contaPoupanca6);
				
				Cliente Carlos = new Cliente();		
				Carlos.setNome("Carlos Brandão");
					Conta contaCorrente7 = new ContaCorrente(Carlos);
					Conta contaPoupanca7 = new ContaPoupanca(Carlos);
				        contas.add(contaCorrente7);
				        contas.add(contaPoupanca7);
				
				Cliente Chris = new Cliente();
				Chris.setNome("Chris Bumstead");
					Conta contaCorrente8 = new ContaCorrente(Chris);
					Conta contaPoupanca8 = new ContaPoupanca(Chris);
				        contas.add(contaCorrente8);
				        contas.add(contaPoupanca8);

		        
				        
		        // Imprime o extrato de todas as contas
		        for (Conta conta : contas) {
		            conta.imprimirExtrato();
		        }
	    }
}

